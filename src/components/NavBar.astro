---
import { useTranslations, getAlternateLocale, getPathWithoutLocale, defaultLocale, languages, type Locale } from "../i18n/utils";

interface Props {
  lang?: Locale;
}

const { lang = defaultLocale } = Astro.props;
const t = useTranslations(lang);
const altLang = getAlternateLocale(lang);
const pathWithoutLocale = getPathWithoutLocale(Astro.url.pathname);
const currentPath = Astro.url.pathname;
---

<nav class="nav-container">
  <div class="nav-content">
    <!-- Logo / Name -->
    <a href={`/${lang}`} class="nav-logo">
      <span class="logo-prefix">EMP.</span>
      <span class="logo-name">VENTURA.V</span>
    </a>
    
    <!-- Navigation Links -->
    <div class="nav-links">
      <a 
        class={`nav-link ${currentPath.includes('/blog') ? 'active' : ''}`} 
        href={`/${lang}/blog`}
      >
        <span class="link-number">01</span>
        <span class="link-text">{t.nav.blog}</span>
      </a>
      <a 
        class="nav-link" 
        href="https://github.com/viniciusventura29"
        target="_blank"
      >
        <span class="link-number">02</span>
        <span class="link-text">{t.nav.github}</span>
      </a>
      
      <!-- Language Switcher -->
      <div class="lang-container">
        <span class="lang-label">LANG:</span>
        <div class="lang-toggle">
          <span class={`lang-option ${lang === 'pt' ? 'active' : ''}`}>PT</span>
          <a 
            href={`/${altLang}${pathWithoutLocale}`}
            class="lang-switch"
            title={`Switch to ${languages[altLang]}`}
          >
            <span class="switch-track">
              <span class={`switch-thumb ${lang === 'en' ? 'right' : 'left'}`}></span>
            </span>
          </a>
          <span class={`lang-option ${lang === 'en' ? 'active' : ''}`}>EN</span>
        </div>
      </div>
      
      <div class="status-indicator">
        <span class="status-dot"></span>
        <span class="status-text">{t.nav.online}</span>
      </div>
    </div>
  </div>
  
  <!-- Bottom border with file number -->
  <div class="nav-border">
    <span class="file-info">{t.nav.fileNo}</span>
    <span class="divider-line"></span>
    <span class="department">{t.nav.department}</span>
  </div>
</nav>

<style>
  .nav-container {
    padding-top: 2rem;
    padding-bottom: 1rem;
    font-family: 'IBM Plex Mono', monospace;
  }

  .nav-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-logo {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    text-decoration: none;
    color: #1A1A1A;
    transition: all 0.2s ease;
  }

  .nav-logo:hover {
    color: #0D5C4B;
  }

  .logo-prefix {
    font-size: 0.7rem;
    color: #5A5A5A;
    letter-spacing: 0.1em;
  }

  .logo-name {
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.15em;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-link {
    display: flex;
    align-items: baseline;
    gap: 0.4rem;
    text-decoration: none;
    color: #5A5A5A;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    transition: all 0.2s ease;
    padding: 0.25rem 0;
    border-bottom: 1px solid transparent;
  }

  .nav-link:hover,
  .nav-link.active {
    color: #0D5C4B;
    border-bottom-color: #0D5C4B;
  }

  .link-number {
    font-size: 0.6rem;
    opacity: 0.6;
  }

  .link-text {
    font-weight: 500;
  }

  /* Language Switcher */
  .lang-container {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .lang-label {
    font-size: 0.55rem;
    color: #5A5A5A;
    letter-spacing: 0.1em;
  }

  .lang-toggle {
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .lang-option {
    font-size: 0.65rem;
    letter-spacing: 0.08em;
    font-weight: 500;
    color: #8A8A8A;
    transition: all 0.2s ease;
  }

  .lang-option.active {
    color: #0D5C4B;
    font-weight: 700;
  }

  .lang-switch {
    display: block;
    text-decoration: none;
  }

  .switch-track {
    display: block;
    width: 28px;
    height: 14px;
    background: #E0DDD8;
    border: 1px solid #2D3D3F;
    border-radius: 7px;
    position: relative;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .switch-track:hover {
    border-color: #0D5C4B;
    background: #D8D5D0;
  }

  .switch-thumb {
    position: absolute;
    top: 1px;
    width: 10px;
    height: 10px;
    background: #0D5C4B;
    border-radius: 50%;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .switch-thumb.left {
    left: 1px;
  }

  .switch-thumb.right {
    left: 15px;
  }

  .switch-track:hover .switch-thumb {
    background: #0A4A3C;
    box-shadow: 0 0 4px rgba(13, 92, 75, 0.4);
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding-left: 1rem;
    border-left: 1px solid rgba(45, 61, 63, 0.3);
  }

  .status-dot {
    width: 6px;
    height: 6px;
    background-color: #0D5C4B;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .status-text {
    font-size: 0.6rem;
    color: #0D5C4B;
    letter-spacing: 0.15em;
  }

  .nav-border {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 1rem;
    padding-top: 0.5rem;
    border-top: 1px solid rgba(45, 61, 63, 0.2);
    font-size: 0.6rem;
    color: #5A5A5A;
    letter-spacing: 0.15em;
  }

  .file-info {
    white-space: nowrap;
  }

  .divider-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(
      to right,
      rgba(45, 61, 63, 0.2),
      rgba(45, 61, 63, 0.1),
      transparent
    );
  }

  .department {
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .nav-content {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .nav-links {
      gap: 1rem;
      flex-wrap: wrap;
    }

    .status-indicator {
      display: none;
    }

    .nav-border {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .divider-line {
      width: 100%;
    }
  }
</style>
