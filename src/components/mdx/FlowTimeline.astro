---
interface Props {
  steps: {
    title: string;
    description: string;
    icon?: string;
  }[];
  title?: string;
}

const { steps, title } = Astro.props;
---

<div class="flow-timeline">
  {title && (
    <p class="timeline-title">{title}</p>
  )}
  
  <div class="timeline-container">
    <!-- Vertical line -->
    <div class="timeline-line"></div>
    
    <div class="timeline-steps">
      {steps.map((step, index) => (
        <div 
          class="timeline-step"
          style={`animation-delay: ${index * 150}ms`}
        >
          <!-- Step number -->
          <div class="step-number">
            {index + 1}
          </div>
          
          <!-- Content -->
          <div class="step-content">
            <div class="step-header">
              {step.icon && <span class="step-icon">{step.icon}</span>}
              <h5 class="step-title">{step.title}</h5>
            </div>
            <p class="step-description">{step.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .flow-timeline {
    margin: 2.5rem 0;
    width: 100%;
  }

  .timeline-title {
    text-align: center;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.65rem;
    color: #5A5A5A;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 500;
  }

  .timeline-container {
    position: relative;
  }

  .timeline-line {
    position: absolute;
    left: 11px;
    top: 0.5rem;
    bottom: 0.5rem;
    width: 1px;
    background: #2D3D3F;
  }

  .timeline-steps {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .timeline-step {
    position: relative;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    animation: fadeIn 0.4s ease-out forwards;
    opacity: 0;
  }

  .step-number {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: #F5F2ED;
    border: 1px solid #0D5C4B;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: #0D5C4B;
    font-weight: 500;
    z-index: 10;
  }

  .step-content {
    flex: 1;
    min-width: 0;
    padding-top: 0.1rem;
  }

  .step-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .step-icon {
    font-size: 1rem;
    opacity: 0.7;
    flex-shrink: 0;
  }

  .step-title {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.85rem;
    font-weight: 500;
    color: #1A1A1A;
    margin: 0;
  }

  .step-description {
    font-size: 0.8rem;
    color: #5A5A5A;
    line-height: 1.5;
    margin: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
