<script is:inline>
var i = 0;
var name = "Vinicius Ventura";
var typingSpeed = 100;

function write() {
  if (i < name.length) {
    document.getElementById("name").innerHTML += name.charAt(i);
    document.getElementById("name").classList.add("typing-container");
    i++;
    setTimeout(write, typingSpeed);
  }
}

write();
</script>
<script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script is:inline>
AOS.init();
