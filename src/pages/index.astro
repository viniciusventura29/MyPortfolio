    }
  }

  .input-cursor {
    display: inline-block;
    background-color: white;
    margin-left: 8px;
  }

  @keyframes blink {
    0% {
      opacity: 1;
    }
    40% {
      opacity: 1;
    }
    60% {
      opacity: 0;
    }
    100% {
      opacity: 0;
    }
  }

  .input-cursor {
    animation: blink 0.5s linear infinite alternate;
  }
</style>
