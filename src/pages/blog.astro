---
import Card from "../components/card.astro";
import Layout from "../layouts/MainLayout.astro";

const posts = await Astro.glob("./blog/*.md").then((posts) =>
  posts.map(({ frontmatter, url }) => ({
    url: url,
    title: frontmatter.title,
    description: frontmatter.description,
    publishDate: frontmatter.publishDate,
  }))
);
---

<Layout title="Vinicius Ventura - Blog">
  <div class="mt-16">
    <div class="flex w-full flex-col justify-between items-center">
      <div>
        <div
          class="flex lg:text-5xl text-6xl text-center lg:text-start font-semibold dark:text-blue-300 text-[#08678C]"
        >
          <h1 class="dark:text-blue-300">My blog</h1>
        </div>
      </div>
    </div>
    <div class="mt-20 grid lg:grid-cols-2 gap-2">
      {posts.map((post) => <Card post={post} />)}
    </div>
  </div>
</Layout>

